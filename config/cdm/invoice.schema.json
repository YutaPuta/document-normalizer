{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "INVOICE_CDM_V1",
  "type": "object",
  "properties": {
    "doc": {
      "type": "object",
      "properties": {
        "type": {
          "const": "INVOICE"
        },
        "document_no": {
          "type": "string",
          "description": "請求書番号"
        },
        "issue_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "発行日"
        },
        "due_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "支払期限"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "default": "JPY",
          "description": "通貨コード"
        },
        "schema_version": {
          "type": "string",
          "const": "1.0"
        },
        "vendor": {
          "type": "string",
          "description": "ベンダー名"
        },
        "vendor_id": {
          "type": "string",
          "description": "ベンダーID"
        },
        "customer_id": {
          "type": "string",
          "description": "顧客ID"
        },
        "extraction_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "抽出タイムスタンプ"
        }
      },
      "required": ["type", "document_no", "issue_date", "currency", "schema_version"]
    },
    "lines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "品目説明"
          },
          "qty": {
            "type": "number",
            "description": "数量"
          },
          "unit_price": {
            "type": "number",
            "description": "単価"
          },
          "amount": {
            "type": "number",
            "description": "金額"
          },
          "tax_rate": {
            "type": "number",
            "description": "税率"
          }
        }
      }
    },
    "totals": {
      "type": "object",
      "properties": {
        "subtotal": {
          "type": "number",
          "description": "小計"
        },
        "tax": {
          "type": "number",
          "description": "消費税"
        },
        "grand_total": {
          "type": "number",
          "description": "合計金額"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "confidence_scores": {
          "type": "object",
          "description": "各フィールドの信頼度スコア"
        },
        "unmapped_fields": {
          "type": "array",
          "description": "マッピングされなかったフィールド",
          "items": {
            "type": "object",
            "properties": {
              "field": {"type": "string"},
              "value": {"type": "string"},
              "source": {"type": "string"}
            }
          }
        }
      }
    }
  },
  "required": ["doc", "lines", "totals"]
}